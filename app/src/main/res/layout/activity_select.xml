    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="8dp"
        android:gravity="center"
        tools:context=".SelectActivity">
            <com.google.android.material.card.MaterialCardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                app:rippleColor="@color/colorAccent"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:src="@drawable/project"
                        android:layout_width="48dp"
                        android:layout_gravity="center"
                        android:layout_height="48dp"/>

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Headline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="10dp"
                        android:text="iChat - Messaging App" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:text="It is basically a messaging app that breaks language barrier between people . It not only allow user to chat with their friends and family but also to the person who is from different culture or region by auto translating the messages to the required language " />
                    <View
                        android:layout_marginBottom="5dp"
                        android:background="@color/menu_background_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/directLaunch"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Lets go"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

